<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/item_of_step"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="120dp"
    android:weightSum="3"
    android:layout_marginBottom="16dp">

    <ImageView
        android:id="@+id/image_of_step"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:scaleType="center"
        android:src="@drawable/ic_open_gallery"
        android:layout_marginRight="8dp"
        android:layout_height="match_parent"/>

    <android.support.design.widget.TextInputEditText
        android:id="@+id/description_of_the_step"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="top"
        android:lines="5"
        android:maxLines="5"
        android:paddingLeft="8dp"
        android:maxLength="120"
        android:layout_weight="2"
        android:hint="@string/descriptionSteps"
        android:background="@drawable/description_edit"/>

</LinearLayout>